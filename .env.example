# Environment variables for database connection
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Environment variables for authentication
NEXTAUTH_URL="https://your-amplify-app.amplifyapp.com"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# JWT Secret for token signing
JWT_SECRET="your-jwt-secret-key"

# Binance API Keys (optional, for when users don't have their own)
BINANCE_API_KEY=""
BINANCE_API_SECRET=""

# Web Push Notification Keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:contact@example.com"

# Analytics endpoint (optional)
NEXT_PUBLIC_ANALYTICS_ENDPOINT=""

# Email Server Configuration (SMTP)
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="noreply@your-domain.com"

# Application URLs
NEXT_PUBLIC_APP_URL="https://your-amplify-app.amplifyapp.com"
